---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Button from "./Elements/Button.astro";
---

<header
  class="text-white z-50 font-bold fixed w-full lg:flex justify-between items-center py-5 px-10 gap-5 mx-auto shadow-lg bg-main-background"
>
  <Astronav closeOnClick>
    <div
      class="flex w-full font-bold text-xs sm:text-lg lg:w-auto justify-between"
    >
      <a
        class="font-bold text-2xl bg-clip-text text-transparent bg-gradient-to-r from-red-400 to-orange"
        >Logo</a
      >
      <!-- Navbar Button Android -->
      <div class="flex lg:hidden">
        <MenuIcon class="text-orange" />
      </div>
    </div>

    <!-- Navbar Menu Android -->
    <MenuItems class="hidden lg:flex">
      <ul
        class="flex flex-col pt-5 lg:flex-row lg:gap-5 lg:items-center lg:p-0"
      >
        <li>
          <Button
            value="Home"
            modify="hover:border-b-4 hover:transition-all hover:duration-75 border-b-orange"
          />
        </li>
        <li>
          <Button
            value="About"
            modify="hover:border-b-4 hover:transition-all hover:duration-75 border-b-orange"
          />
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
